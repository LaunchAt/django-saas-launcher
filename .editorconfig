# EditorConfig
# https://editorconfig.org

root = true

[*]
indent_style = space
indent_size = 2
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.flake8]
indent_size = 4

[*.ini]
indent_size = 4

[*.md]
indent_size = 4

[*.py]
indent_size = 4

[*.toml]
indent_size = 4
